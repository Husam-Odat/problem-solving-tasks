<?php
// Initialize an empty array to represent the stack
$stack = [];

// Push elements onto the stack
array_push($stack, "Apple");
array_push($stack, "Banana");
array_push($stack, "Cherry");

echo "Stack after pushes: \n";
print_r($stack);

// Pop the top element from the stack
$top = array_pop($stack);
echo "\nPopped element: $top\n";

// Peek the top element without removing it
$peek = end($stack);
echo "\nTop element (after pop): $peek\n";

// Check if the stack is empty
if (empty($stack)) {
    echo "\nStack is empty.\n";
} else {
    echo "\nStack is not empty.\n";
}

echo "\nStack after operations: \n";
print_r($stack);
